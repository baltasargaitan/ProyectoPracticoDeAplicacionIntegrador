@model List<RedSismica.Models.OrdenDeInspeccion>
@{
    ViewData["Title"] = "Órdenes de Inspección Completamente Realizadas";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-clipboard-check"></i> Órdenes de Inspección Completamente Realizadas</h2>
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>N° Orden</th>
                <th>Fecha de Finalización</th>
                <th>Estación Sismológica</th>
                <th>Sismógrafo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var orden in Model)
            {
                <tr>
                    <td>@orden.Id</td>
                    <td>@(orden.fechaHoraFinalizacion.ToString("dd/MM/yyyy HH:mm"))</td>
                    <td>@orden.Estacion?.nombre</td>
                    <td>@orden.Estacion?.Sismografos.FirstOrDefault()?.Id</td>
                    
                    <td>
                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("ConfirmarCierre", "OrdenInspeccion", new { id = orden.Id })">
                            <i class="bi bi-check-circle"></i> Cerrar
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay órdenes completamente realizadas pendientes de cierre.</td>
            </tr>
        }
        </tbody>
    </table>
</div>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">