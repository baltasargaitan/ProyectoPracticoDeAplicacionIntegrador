@model List<RedSismica.Models.OrdenInspeccion>

@{
    ViewData["Title"] = "Órdenes de inspección pendientes";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2 class="mb-4 text-primary"><i class="bi bi-clipboard-check"></i> Órdenes de Inspección Pendientes</h2>
    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Estación</th>
                <th>Responsable</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var orden in Model)
            {
                <tr>
                    <td>@orden.Id</td>
                    <td>@orden.EstacionSismologica?.Nombre</td>
                    <td>@orden.Empleado?.Nombre</td>
                    <td>
                        @if (orden.EstaCerrada)
                        {
                            <span class="badge bg-success">Cerrada</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Abierta</span>
                        }
                    </td>
                    <td>
                        @if (!orden.EstaCerrada)
                        {
                            <a class="btn btn-sm btn-outline-primary" href="/OrdenInspeccion/ConfirmarCierre/@orden.Id">
                                <i class="bi bi-check-circle"></i> Cerrar
                            </a>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center text-muted">No hay órdenes de inspección pendientes.</td>
            </tr>
        }
        </tbody>
    </table>
    <a class="btn btn-success" href="/">Volver al inicio</a>
</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">